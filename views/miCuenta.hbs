<div class="container mt-5">
  <h2>Mi Cuenta</h2>
  <hr class="linea-divisoria" />
  {{#each data}}
  <form>
    <div class="row">
      <div class="col-md-4 mb-50">
        <div class="mb-3 text-center">
          <label for="foto_perfil" class="form-label">
            <img
              src="/img/perfil.jpg"
              alt="Foto de perfil"
              class="profile-picture"
              id="preview_image"
            />
            <input
              type="file"
              class="form-control mt-2"
              id="foto_perfil"
              name="foto_perfil"
              accept="image/*"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">Género</label>
          <div class="custom-radio">
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="genero"
                id="genero_f"
                value="F"
                required
              />
              <label class="form-check-label" for="genero_f">Femenino</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="genero"
                id="genero_m"
                value="M"
                required
              />
              <label class="form-check-label" for="genero_m">Masculino</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="genero"
                id="genero_o"
                value="O"
                required
              />
              <label class="form-check-label" for="genero_o">Otros</label>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-50">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <p>{{nombre}}</p>
        </div>
        <div class="mb-3">
          <label for="apellido" class="form-label">Apellido</label>
          <p>{{apellido}}</p>
        </div>
        <div class="mb-3">
          <label for="fecha_nacimiento" class="form-label">Fecha de nacimiento</label>
          <p>{{fechaNac}}</p>
        </div>
      </div>
      <div class="col-md-4 mb-50">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <p>{{email}}</p>
        </div>
        <div class="mb-3">
          <label for="pais" class="form-label">País</label>
          <p>{{pais}}</p>
        </div>
        <div class="mb-3">
          <label for="telefono" class="form-label">Teléfono</label>
          <p>{{pais}}</p>
        </div>
      </div>
    </div>
    <div class="row justify-content-end mb-4">
      <div class="col-md-4">
        <a href="/miCuenta/editarPerfil/" class="botonFormulario">
          Editar perfil
        </a>
      </div>
    </div>
  </form>
</div>

<div class="container">
  <div class="cuadro-cursos">
    <h2 class="mb-4">Lista de Cursos</h2>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Fecha de Inscripción</th>
            <th>Curso</th>
            <th>Estado</th>
            <th>Fecha de Conclusión</th>
            <th>Certificado</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{inscripcion}}</td>
            <td>{{curso}}</td>
            <td>{{estado}}</td>
            <td>{{fecha}}</td>
            <td><a href="#">Ver certificado</a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
{{/each}}